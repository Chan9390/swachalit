<div class='row'>
  <div class='col-md-6'>
    <h3>Re-send Confirmation Mail</h3>
    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'form' }) do |f| %>
      <%= resource_error_messages!(resource) %>

      <div class='form-group'>
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, :class => 'form-control' %>  
      </div>

      <div class='form-group'>
        <%= recaptcha_tags %>
      </div>


      <%= f.submit "Send", :class => 'btn btn-lg btn-primary' %> <br/><br/>
      <%= link_to 'Need an Account? Sign-up Here', new_registration_path(resource_name) %> <br/>
      <%= link_to 'Forgot your password?', new_password_path(resource_name) %> <br/>
    <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
