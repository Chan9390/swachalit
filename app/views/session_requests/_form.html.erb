<%= semantic_form_for(@session_request) do |f| %>
  <%= resource_error_messages!(@session_request) %>
  <%= f.inputs do %>
    <%= f.input :chapter, :as => :select, :collection => ::Chapter.active_chapters %>
    <%= f.input :session_topic %>
    <%= f.input :session_description %>
  <% end %>

  <br/>
  <%= f.inputs do %>
    <%= f.action :submit, :label => 'Create Session Request', :button_html => { :class => 'btn btn-primary' } %>
  <% end %>
<% end %>