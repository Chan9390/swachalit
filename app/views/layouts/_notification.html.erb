<% if alert or notice %>
<div class='container' style='padding-top: 1em;'>
  <% if alert %>
  <div class="alert alert-danger alert-block">
    <button type="button" class="close" data-dismiss="alert">x</button>
    <center><%= alert %></center>
  </div>
  <% elsif notice %>
  <div class="alert alert-info alert-block">
    <button type="button" class="close" data-dismiss="alert">x</button>
    <center><%= notice %></center>
  </div>
  <% end %>
</div>
<% end %>